<h1>All my tasks </h1>

<ul>
	<% @tasks.each do |task| %>
	<li>
		<%= link_to task.title, task_path(task) %>
		<%= task.details %>
		<%= "completed : #{task.completed}" %>
		<%= link_to "Delete #{task.title}",
		             task_path(task),
		             method: :delete,
		             data: { confirm: "are you sure?" } %>
	</li>
	<% end %>
</ul>
